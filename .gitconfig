[include]
	path = ~/.gituserinfo
[color]
	branch = auto
	diff = auto
	interactive = auto
	status = auto
[pager]
	status = true
[core]
	editor = kak
	pager = less -XFR
	quotepath = false
	attributesfile = ~/.gitattributes
[alias]
	st = status
	co = checkout
	ci = commit
	br = branch
	df = diff
	dc = diff --cached
	l = log --graph --decorate --pretty=oneline --abbrev-commit --branches --format='%C(auto)%d%C(auto,reset) %s (%h, %an)'
	la = log --graph --decorate --pretty=oneline --abbrev-commit --branches --format='%C(auto)%d%C(auto,reset) %s (%h, %an)' --all
	logg = log --graph --decorate --pretty=oneline --abbrev-commit --branches --format='%C(auto)%d%C(auto,reset) %s (%h, %an)'
	logga = log --graph --decorate --pretty=oneline --abbrev-commit --branches --format='%C(auto)%d%C(auto,reset) %s (%h, %an)' --all
	root = rev-parse --show-toplevel
	ign = ls-files -o -i --exclude-standard
	history = "!function pp() { for file in \"$@\"; do echo \"$file|\" `git log --pretty=format:'%cr: %s [%cn]' -1 -- \"$GIT_PREFIX$file\"`; done | column -t --separator '|'; }; pp "
	diff-image = "!f() { GIT_DIFF_IMAGE_ENABLED=1 git diff \"$@\"; }; f"
	nyancat = "!nyancat"
[push]
	default = simple

[diff]
	wsErrorHighlight = all
[diff "image"]
	command = ~/.gitrc/git-diff-image/git_diff_image
[diff "zip"]
  textconv = unzip -l
  binary = true
[diff "gz"]
  textconv = gzcat
  binary = true
[diff "bz2"]
  textconv = bzcat
  binary = true
[diff "xz"]
  textconv = xzcat
  binary = true
[diff "tar"]
  textconv = tar -O -xf
  binary = true
[diff "tar-bz2"]
  textconv = tar -O -xjf
  binary = true
[diff "tar-gz"]
  textconv = tar -O -xzf
  binary = true
[diff "tar-xz"]
  textconv = tar -O -xJf
  binary = true
[diff "odf"]
  textconv = odt2txt
[diff "pdf"]
  textconv = pdfinfo
[diff "bin"]
  textconv = hexdump -v -C

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
